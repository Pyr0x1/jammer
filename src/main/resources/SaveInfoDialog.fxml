<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<DialogPane xmlns:fx="http://javafx.com/fxml">
	<content>
		<HBox spacing="10">
			<ImageView fx:id="contentIcon"/>
			<GridPane hgap="10" vgap="5">
				<padding>
					<Insets top="10" bottom="10" left="10" right="10"/>
				</padding>
				
				<Label text="%dialog.save.info.content.title" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
				<Label fx:id="contentTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
				
				<Label text="%dialog.save.info.content.product.code" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
				<Label fx:id="contentProductCode" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
				
				<Label text="%dialog.save.info.content.identifier" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
				<Label fx:id="contentIdentifier" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
				
				<Label text="%dialog.save.info.content.region" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
				<Label fx:id="contentRegion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
				
				<Label text="%dialog.save.info.content.slot" style="-fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
				<Label fx:id="contentSlot" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
				
				<Label text="%dialog.save.info.content.size" style="-fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
				<Label fx:id="contentSize" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
				
				<Label text="%dialog.save.info.content.icon.frames" style="-fx-font-weight: bold;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
				<Label fx:id="contentIconFrames" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
			</GridPane>
		</HBox>
	</content>
	<buttonTypes>        
        <ButtonType text="%dialog.save.info.button" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>

